<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/loginFormLayout"
        style="@style/WidthMatchHeightWrap"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            style="@style/WidthWrapHeightWrap"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_splash" />

        <TextView
            style="@style/WidthMatchHeightWrap"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="Registration"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/emailEditText"
            style="@style/WidthMatchHeightWrap"
            android:layout_marginTop="30dp"
            android:hint="Email"
            android:inputType="text" />

        <RelativeLayout style="@style/WidthMatchHeightWrap">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/passwordEditText"
                style="@style/WidthMatchHeightWrap"
                android:layout_marginTop="16dp"
                android:hint="Password" />
        </RelativeLayout>

        <RelativeLayout style="@style/WidthMatchHeightWrap">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/confirmPasswordEditText"
                style="@style/WidthMatchHeightWrap"
                android:layout_marginTop="16dp"
                android:hint="Confirm Password" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/WidthMatchHeightWrap"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/registerButton"
                style="@style/WidthMatchHeightWrap"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:background="@drawable/rectangle"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            style="@style/WidthMatchHeightWrap"
            android:layout_below="@id/loginFormLayout"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/WidthMatchHeightWrap"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/WidthWrapHeightWrap"
                    android:text="Already Logged In? " />

                <TextView
                    android:id="@+id/loginTextView"
                    style="@style/WidthWrapHeightWrap"
                    android:text="Login"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>